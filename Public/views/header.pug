doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/Public/Styles/style.css")
    title= title
body 
    header
        nav.nav.flex
            a(href="/Pokedex").nav__logo#link 
                img(src="/Public/Assets/logo.gif" alt="logotype").nav__logo
            div.nav__conteiner-search.flex
                input(type="search" placeholder="Search Pokemon / Id").search__input-search#searchPokemon
                input(type="button").search__input-button#inputSearch
            div.flex
                select.conteiner-mode#selectMode
                    mixin mode(name, subname) 
                        if(name === locals.mode)
                            option(value=name selected)= subname
                        else
                            option(value=name)= subname
                    +mode("all", "All")
                    +mode("api", "Api")
                    +mode("db", "Db")

    block content 